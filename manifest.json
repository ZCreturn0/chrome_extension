{
    "manifest_version": 2,
    "name": "鱼吧签到",
    "version": "1.0.0",
    "description": "小天使鱼吧自动签到",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "鱼吧签到",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/jquery-3.4.1.min.js", "js/sign.js"],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "contextMenus",
        "http://*/*",
        "https://*/*",
        "cookies",
        "notifications",
        "webRequest",
        "webRequestBlocking"
    ],
    "web_accessible_resources": ["js/jquery-3.4.1.min.js", "js/sign.js"],
    "homepage_url": "255",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "default_locale": "zh_CN",
    "devtools_page": "devtools.html"
}